<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="40dp"
    tools:context=".PostActivity">


    <EditText
        android:id="@+id/threadTitle"
        android:layout_width="367dp"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:gravity="left"
        android:hint="@string/title_hint"
        app:layout_constraintBottom_toTopOf="@+id/threadContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/threadContent"
        android:layout_width="358dp"
        android:layout_height="471dp"
        android:gravity="start"
        android:hint="@string/post_hint"

        app:layout_constraintBottom_toTopOf="@+id/pushData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threadTitle" />

    <Button
        android:id="@+id/pushData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threadContent" />

</androidx.constraintlayout.widget.ConstraintLayout>